{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":preserveSemverRanges"],
  "ignorePresets": [":prHourlyLimit2"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false,
  "branchConcurrentLimit": 0,
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint", "stylelint", "prettier", "^@types", "^actions/checkout$", "^http-server$"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePatterns": [
        "faker",
        "faker",
        "^simple-icons$",
        "^vue-material-design-icons$",
        "^@nuxtjs/google-fonts$",
        "^@prisma/client$",
        "^prisma$",
        "^netlify-cli$",
        "^nuxt$",
        "^postcss$",
        "^postcss-html$",
        "^markdown-it$",
        "^vue-gtag-next$",
        "^dayjs$",
        "^pinia$",
        "^sass$",
        "^ts-node$"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": ["^@xmldom/xmldom$", "^@pinia/nuxt$"],
      "automerge": true
    }
  ]
}
